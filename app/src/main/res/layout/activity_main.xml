<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayoutImage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ball"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:context=".MainActivity"
            >

            <TextView
                android:id="@+id/team_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="Team A"
                android:fontFamily="sans-serif-medium"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="0"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:textSize="56dp"
                android:fontFamily="sans-serif-light"
                />

            <Button
                android:id="@+id/three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="threePoints"
                android:text="+3 points"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                />

            <Button
                android:id="@+id/two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:gravity="center"
                android:onClick="twoPoints"
                android:text="+2 points"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"

                />

            <Button
                android:id="@+id/free"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="onePoint"
                android:text="free throw"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                />

            <TextView
                android:id="@+id/team_a_foul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="0"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:textSize="26dp"
                android:fontFamily="sans-serif-light"
                />

            <Button
                android:id="@+id/foulA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="oneFoulA"
                android:text="fouls"
                android:textAllCaps="true"
                android:layout_marginBottom="24dp"
                android:textColor="#FFFFFF"
                />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <TextView
                android:id="@+id/team_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Team B"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                />

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="0"
                android:textSize="56dp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-light"

                />

            <Button
                android:id="@+id/threeB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="threePointsB"
                android:text="+3 points"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"

                />

            <Button
                android:id="@+id/twoB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:onClick="twoPointsB"
                android:text="+2 points"
                android:textAllCaps="true"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:textColor="#FFFFFF"

                />

            <Button
                android:id="@+id/freeB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="onePointB"
                android:text="free throw"
                android:textAllCaps="true"
                android:layout_marginTop="8dp"
                android:textColor="#FFFFFF"
                />

            <TextView
                android:id="@+id/team_b_foul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="0"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="18dp"
                android:textSize="26dp"
                android:fontFamily="sans-serif-light"
                />

            <Button
                android:id="@+id/foulB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="oneFoulB"
                android:text="fouls"
                android:textAllCaps="true"
                android:layout_marginBottom="24dp"
                android:textColor="#FFFFFF"
                />




        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_gravity="bottom"
        android:onClick="Reset"
        android:textColor="#FFFFFF"
        android:text="Reset"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"/>
</RelativeLayout>
